{
    "version": 2,
    "public": false,
    "builds": [
        {
            "src": "/server.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/((?!api\/.*).*)",
            "destination": "/index.html"
        },
        {
            "source": "/api/(.*)",
            "destination": "/server.js"
        }
    ]
}
